<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - iPOS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link href="https://fonts.googleapis.com/css?family=Roboto&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/lib/font-awesome/css/all.css">
    <style>
        * {
            font-size: 14px !important;
        }
    </style>
</head>
<body>
    <div class="container login">
        <div class="row justify-content-center p-2" style="margin-top: 120px">
            <div class="col-lg-12 col-md-12 text-center mb-4">
                <h5>iPos</h5>
            </div>
            <div class="col-lg-4 col-md-5 col-sm-12 border rounded p-3 shadow-sm bg-white">
                @RenderBody()
            </div>
        </div>
    </div>
    
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
